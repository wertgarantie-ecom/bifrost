<%- include('../includes/head.ejs') %>

<link rel="stylesheet" href="/css/button.css">
<link rel="stylesheet" href="/css/forms.css">

<!-- last -->
<link rel="stylesheet" href="/css/pages/admin.css">

</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <style>
        .card__container {
            display: flex;
            flex-direction: column;
            margin-bottom: 3rem;
        }

        .card {
            background: white;
            border: none;
            border-radius: 0;
            text-align: left;
            box-shadow: 1px 1px 4px 0 rgba(0, 0, 0, 0.26);
            margin-bottom: .35rem;
        }

        .card:hover {
            background: var(--highlightColor);
        }
        
        .card__link {
            display: flex;
            align-items: center;
            text-decoration: none;
            padding: 1rem;
            color: black;
            height: 100%;
            width: 100%;
            justify-content: space-between;
        }

        .card__title {
            font-weight: lighter;
            font-size: 1rem;
            margin: 0;
        }

    </style>

    <main class="content">

        <div class="start__container">
            
            <h1 class="content__heading">Übersicht Clients</h1>

            <!-- Action bar -->
            <div class="content__actions">
                <div class="content__actions__search">
                    <form class="form">
                        <div class="form-control">
                            <label for="search">Suchen</label>
                            <input disabled type="text" name="search" id="search">
                        </div>
                    </form>
                </div>
                <div class="content__actions__new">
                    <button type="button" class="button button--primary">Neuen Client anlegen</button>
                </div>
            </div>

            <!-- Client table -->
            <div class="card__container">
                <% for (let client of clients) { %>
                    <article class="card">
                        <a class="card__link" href="/admin/<%= client.id %>" rel="noopener nofollow">
                            <h1 class="card__title">
                                <%= client.name %>
                            </h1>
                            <form action="/admin/delete" method="post">
                                <input type="hidden" value="<%= client.id %>" name="clientId">
                                <button type="submit" class="button button--danger">Client löschen</button>
                            </form>
                        </a>
                    </article>
                <% } %>
            </div>
        </div> 
    </main>
    
<%- include('../includes/end.ejs') %>