								"exec": [
									"globalFunctions = {",
									"    obtainBearerToken: function(pm) {",
									"        var request = {",
									"            url: pm.environment.get(\"host\") + \"/api/v1/auth/client/\" + pm.globals.get(\"wg-clientId\"),",
									"            method: \"GET\",",
									"            header: \"Accept:application/json\"",
									"        }",
									"        pm.sendRequest(request, function(err, response) {",
									"            var jsonResponse = response.json();",
									"            var bearerToken = jsonResponse.payload.access_token.split(\"Bearer \")[1];",
									"            pm.globals.set(\"wg-bearer-token\", bearerToken);",
									"        });",
									"    }",
									"}",
									"",
									"globalFunctions.obtainBearerToken(pm);"
								],
								"type": "text/javascript"
							}
						}
					],
